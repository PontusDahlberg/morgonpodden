# MMM Senaste Nytt - Example environment configuration
# Copy this file to .env and fill in your values

# Google Cloud TTS (primary TTS provider)
USE_GOOGLE_CLOUD_TTS=true
GOOGLE_APPLICATION_CREDENTIALS=./google-cloud-service-account.json

# OpenRouter for AI generation (required)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Cloudflare R2 hosting (required)
CLOUDFLARE_API_TOKEN=your_cloudflare_token_here
CLOUDFLARE_R2_ACCOUNT_ID=your_account_id_here
CLOUDFLARE_R2_BUCKET=manniska-maskin-miljo
CLOUDFLARE_R2_PUBLIC_URL=https://manniska-maskin-miljo.example.r2.dev

# ElevenLabs (optional fallback)
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID_SANNA=
ELEVENLABS_VOICE_ID_GEORGE=

# OpenAI API (optional backup)
OPENAI_API_KEY=

# Podcast settings
PODCAST_TITLE=Maniska Maskin Miljo
PODCAST_AUTHOR=Pontus - Maniska Maskin Miljo
PODCAST_EMAIL=podcast@example.com
PODCAST_LANGUAGE=sv-SE

# Debug and test
LOCAL_TEST_MODE=false
DEBUG_MODE=false
USE_TTS_BACKUP=false

# Content quality - thin items
MMM_THIN_AUTO_STRICT=1
MMM_THIN_RATIO_THRESHOLD=0.35
MMM_THIN_RATIO_MIN_ITEMS=6
MMM_REQUIRE_ARTICLE_CONTENT=false
